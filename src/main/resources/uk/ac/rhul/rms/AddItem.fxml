            <Font name="System Bold" size="12.0" />
         </font>
      </Text>
      <CheckBox fx:id="vegan" layoutX="392.0" layoutY="329.0" mnemonicParsing="false" onAction="#handleDietType" text="Vegan" textFill="WHITE" />
      <CheckBox fx:id="vegetarian" layoutX="474.0" layoutY="329.0" mnemonicParsing="false" onAction="#handleDietType" text="Vegetarian" textFill="WHITE" />
      <CheckBox fx:id="nonVeg" layoutX="558.0" layoutY="329.0" mnemonicParsing="false" onAction="#handleDietType" text="Non-Vegetarian" textFill="WHITE" />
