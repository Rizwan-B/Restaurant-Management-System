      <TextField fx:id="itemImage" layoutX="296.0" layoutY="394.0" prefHeight="16.0" prefWidth="350.0" promptText="ITEM IMAGE LOCATION" />
      <Button fx:id="addItem" layoutX="398.0" layoutY="451.0" mnemonicParsing="false" onAction="#getText" prefHeight="28.0" prefWidth="146.0" text="Add Item">
         <font>
            <Font name="Baskerville Old Face" size="15.0" />
         </font></Button>
      <TextField fx:id="price" layoutX="296.0" layoutY="259.0" prefHeight="26.0" prefWidth="350.0" promptText="PRICE" />
   </children>
</Pane>
