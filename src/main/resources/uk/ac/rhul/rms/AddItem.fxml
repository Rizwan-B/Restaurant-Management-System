            <Font name="System Bold" size="12.0" />
         </font>
      </Text>
      <Text fx:id="ChooseDiet" fill="WHITE" layoutX="297.0" layoutY="341.0" strokeType="OUTSIDE" strokeWidth="0.0" text="CHOOSE ONE-" underline="true">
