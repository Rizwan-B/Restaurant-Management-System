            <Font name="Baskerville Old Face" size="15.0" />
         </font></Button>
      <TextField fx:id="itemID" layoutX="297.0" layoutY="149.0" prefHeight="23.0" prefWidth="349.0" promptText="ITEM ID" />
      <TextField fx:id="itemName" layoutX="296.0" layoutY="187.0" prefHeight="17.0" prefWidth="350.0" promptText="ITEM NAME" />
      <TextField fx:id="calories" layoutX="297.0" layoutY="224.0" prefHeight="23.0" prefWidth="350.0" promptText="CALORIES (KCAL)" />
      <CheckBox fx:id="starter" layoutX="392.0" layoutY="297.0" mnemonicParsing="false" onAction="#handleCoursetype" text="Starter" textFill="WHITE" />
      <CheckBox fx:id="main" layoutX="474.0" layoutY="297.0" mnemonicParsing="false" onAction="#handleCoursetype" text="Main" textFill="WHITE" />
      <CheckBox fx:id="dessert" layoutX="558.0" layoutY="297.0" mnemonicParsing="false" onAction="#handleCoursetype" text="Dessert" textFill="WHITE" />
      <Text fx:id="chooseOne" fill="WHITE" layoutX="297.0" layoutY="310.0" strokeType="OUTSIDE" strokeWidth="0.0" text="CHOOSE ONE-" underline="true">
